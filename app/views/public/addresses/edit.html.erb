<div class="container">
  
<h3>配送先編集</h3>

<%= form_with model: @address, url: address_path(@address), local:true do |f| %>
  
  <div class="row mb-3">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-sm-2 col-form-label" %>
    <div class="form-group col-sm-7">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>  
  </div>
  
  <div class="row mb-3">
    <%= f.label :address, "住所", class: "col-sm-2 col-form-control" %>
    <div class="col-sm-7">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= f.label :name, "宛名", class: "col-sm-2 col-form-control" %>
    <div class="col-sm-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= f.submit "編集する", class: "btn btn-success" %>
  </div>
  <% end %>
</div>