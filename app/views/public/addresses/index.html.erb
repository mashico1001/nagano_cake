<div class="container">
  <h3>配送先登録/一覧画面</h3>

  <%= form_with model: @address, url: addresses_path, local:true do |f| %>
  
  <div class="row mb-3">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-sm-2 col-form-label" %>
    <div class="form-group col-sm-7">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>  
  </div>
  
  <div class="row mb-3">
    <%= f.label :address, "住所", class: "col-sm-2 col-form-control" %>
    <div class="col-sm-7">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= f.label :name, "宛名", class: "col-sm-2 col-form-control" %>
    <div class="col-sm-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
  <% end %>
  
  <div class="row mb-3">
    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= address.postal_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td>
            <%= link_to edit_address_path(address), class: 'btn btn-success' do %>
            編集する
            <% end %>
          </td>
          <td>
            <%= link_to address_path(address), method: :delete, class: 'btn btn-danger' do %>
            削除する
            <% end %>
          </td>
          
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


