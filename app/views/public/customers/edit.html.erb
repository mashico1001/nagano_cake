<div class="container">
  <div class="row">
    <div class="col-auto my-3 title-background-color">登録情報編集</div>
  </div>
  <div class="row">
    <div class="col-10">
      <table class="table table-borderless">
      <%= form_with model: @customer, url: customers_path, local: true do |f| %>
        <tr>
          <th>氏名</th>
          <td>
            <div class="form-inline">
              <%= f.text_field :last_name, autofocus: true, class: "form-control" %>　
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <div class="form-inline">
            <%= f.text_field :last_name_kana, class: "form-control" %>　
            <%= f.text_field :first_name_kana, class: "form-control" %>
            </div>
          </td>
        </tr>
        <tr><th>郵便番号</th><td><%= f.text_field :postal_code, class: "form-control" %></td></tr>
        <tr><th>住所</th><td><%= f.text_field :address, class: "form-control" %></td></tr>
        <tr><th>電話番号</th><td><%= f.text_field :telephone_number, class: "form-control" %></td></tr>  
        <tr><th>メールアドレス</th><td><%= f.email_field :email, class: "form-control" %></td></tr>
        <tr><th></th><td><%= f.submit "編集内容を保存", class: 'btn btn-success' %>
                         <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %></td></tr>
      <% end %>
      </table>
    </div>
  </div>
  
  
  