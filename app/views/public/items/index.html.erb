<div class="container">
  <div class="row mx-auto">
    <div class="col-3">
      <h3 class="my-3">ジャンル検索</h3>
      <%= form_with url:items_path, method: :get, local: true do |f| %>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, items_path(name: genre.id) %><br/>
        <% end %>
      <% end %>
      <div class="my-3">
        <%= link_to "全ての商品", items_path %>
      </div>
          
    </div>
    <div class="col-9">

      <h3 class="my-3">商品一覧</h3>
      <div class="d-flex flex-ms-row flex-wrap">
      <% @items.each do |item| %>
        <div class="mr-2">
          <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "images.png" %>
          <% end %>
          <p class="mt-3"><%= item.name %></p>
          <p>￥<%= item.with_tax_price.to_s(:delimited) %></p>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>