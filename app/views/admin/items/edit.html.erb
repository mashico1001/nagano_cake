<div class="container">
  <h1>商品編集画面</h1>
  <div class="center-block">
    
    <%= form_with model: @item, url: admin_item_path(@item), local:true do |f| %>

      <div class="row mb-3">
          <%= f.label :image, "商品画像", class: "col-sm-2 col-form-label" %>
        <div class="form-group col-sm-7">
          <%= f.attachment_field :image, placeholder: "商品画像", class: "form-control-file" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :name, "商品名", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :introduction, "商品説明", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label "ジャンル名", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
          <%= f.collection_select(:genre_id, @genres, :id, :name) %>
        </div>
      </div> 
      <div class="row mb-3">
        <%= f.label :price, "税抜価格", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
        <%= f.text_field :price, class: "form-control" %>円
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :is_active, "販売ステータス", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "売り切れ", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-7">
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>