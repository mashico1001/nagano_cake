<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h4 class="mt-3">商品新規登録画面</h4>
      <table class="table table-borderless">
        <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
        <tr>
          <th>商品画像</th><td><%= f.attachment_field :image, placeholder: "商品画像", class: "form-control-file" %></td>
        </tr>
        <tr>
          <th>商品名</th><td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
        <tr>
          <th>商品説明</th><td><%= f.text_area :introduction, class: "form-control" %></td>
        </tr>
        <tr>
          <th>ジャンル名</th><td><%= f.collection_select(:genre_id, @genres, :id, :name) %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td>
            <div class="form-inline">
            <%= f.text_field :price, class: "form-control" %>　円
            </div>
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true, checked: true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "売り切れ", {value: :false, style: "display: inline-block;"} %>
          </td>
        </tr>
        <tr>
          <th></th><td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div> 
