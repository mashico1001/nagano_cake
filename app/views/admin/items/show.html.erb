<div class="container">
<h1>商品詳細</h1>
  <div class="row">
    <div class="col-5">
    <%= attachment_image_tag @item, :image, :fill, 400, 300, fallback: "images.png" %>
    </div>
    <div class="col-7">
      <p>
        商品
        <%= @item.name %>
      </p>
      <p>
        商品説明
        <%= @item.introduction %>
      </p>
      <p>
        ジャンル
        <%= @item.genre.name %>
      </p>
      <p>
        税込価格（税抜価格）
        <%= @item.with_tax_price.to_s(:delimited) %>
        ( <%= @item.price %> ) 円
      </p>
      <p>
        販売ステータス
        <% if @item.is_active == true %>
        <p class="font-weight-bold text-success">販売中</p>
        <% else %>
        <p class="font-weight-bold text-black-50">売り切れ</p>
        <% end %>

      </p>
      <p>
        <%= link_to edit_admin_item_path(@item), class: 'btn btn-success' do %>
        編集する
        <% end %>
      </p>
    </div>
  </div>  
</div>
