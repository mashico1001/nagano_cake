<div class="container">
  <div class="row">
    <div class="col-8 mt-3 mx-auto">
      <h4>商品一覧画面</h4>
    </div>
    <div class="col-2 mt-3">
      <%= link_to new_admin_item_path do %>
        <%= image_tag '1650.png', size: '30x30' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-10 my-3 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
                <%= item.id %>
            </td>
            <td>
                <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
                <% end %>
            </td>
            <td>
                <%= item.price.to_s(:delimited) %>円
            </td>
            <td>
                <%= item.genre.name %>
            </td>
            <td>
                <% if item.is_active == true %>
                <div class="font-weight-bold text-success">販売中</div>
                <% else %>
                <div class="font-weight-bold text-black-50">売り切れ</div>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>