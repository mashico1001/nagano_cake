<h1>商品一覧画面だよ</h1>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @items.each do |item| %>
      <td>
        <p>
          <%= item.id %>
        </p>
      </td>
      <td>
        <p>
          <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
          <% end %>
        </p>
      </td>
      <td>
        <p>
          <%= item.price %>円
        </p>
      </td>
      <td>
        <p>
          <%= item.genre.name %>
        </p>
      </td>
      <td>
        <p>
          <% if item.is_active == true %>
          <p class="font-weight-bold text-success">販売中</p>
          <% else %>
          <p class="font-weight-bold text-black-50">売り切れ</p>
          <% end %>
        </p>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>