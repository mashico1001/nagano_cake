<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
    <h4 class="my-3">ジャンル一覧・追加</h4>
    
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <%= f.label :name, "ジャンル" %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      <% end %>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <p>
                <%= genre.name %>
              </p>
            </td>
            <td>
                <%= link_to edit_admin_genre_path(genre), class: 'btn btn-success' do %>
                  編集する
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

