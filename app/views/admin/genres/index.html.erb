<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <%= f.label :name, "ジャンル" %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>

<div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @genres.each do |genre| %>
        <td>
          <p>
            <%= genre.name %>
          </p>
        </td>
        <td>
            <%= link_to edit_admin_genre_path(genre), class: 'btn btn-success' do %>
              編集する
            <% end %>
        </td>
        <% end %>
      </tr>
   
    </tbody>
  </table>
</div>

