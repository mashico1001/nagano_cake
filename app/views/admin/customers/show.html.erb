<div class="container">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      会員ID
    </div>
    <div class="col-5">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      氏名
    </div>
    <div class="col-5">
      <%= @customer.last_name %>　<%= @customer.first_name %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      フリガナ
    </div>
    <div class="col-5">
      <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      郵便番号
    </div>
    <div class="col-5">
      <%= @customer.postal_code %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      住所
    </div>
    <div class="col-5">
      <%= @customer.address %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      電話番号
    </div>
    <div class="col-5">
      <%= @customer.telephone_number %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-5">
      <%= @customer.email %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
    <div class="col-3">
      会員ステータス
    </div>
    <div class="col-5">
      <% if @customer.is_active == true %>
      <p class="font-weight-bold text-success">有効</p>
      <% else %>
      <p class="font-weight-bold text-black-50">退会</p>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mb-3 offset-md-2">
    <div class="col-sm-2">
    <%= link_to edit_admin_customer_path(@customer), class: 'btn btn-success' do %>
      編集する
    <% end %>
    </div>
    <div class="col-sm-3">
    <%= link_to admin_path, class: 'btn btn-primary' do %>
      注文履歴一覧を見る
    <% end %>
    </div>
  </div>
</div>