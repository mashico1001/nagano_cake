<div class="container">
  <h1>
    <%= @customer.last_name %><%= @customer.first_name %>
    さんの会員詳細
  </h1>
  <div class="center-block">
    <div class="row mb-3">
      <div class="col-sm-5">会員ID</div>
      <div class="col-sm-7"><%= @customer.id %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">氏名</div>
      <div class="col-sm-7"><%= @customer.last_name %>　<%= @custommer.first_name %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">フリガナ</div>
      <div class="col-sm-7"><%= @customer.last_name_kana %>　<%= @custommer.first_name_kana %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">郵便番号</div>
      <div class="col-sm-7"><%= @customer.postal_code %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">住所</div>
      <div class="col-sm-7"><%= @customer.address %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">電話番号</div>
      <div class="col-sm-7"><%= @customer.telephone_number %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">メールアドレス</div>
      <div class="col-sm-7"><%= @customer.email %></div>
    </div>
    
    <div class="row mb-3">
      <div class="col-sm-5">退会ステータス</div>
      <div class="col-sm-7"><%= @customer.is_active ? '有効' : '退会' %></div>
    </div>
    
    
    
  </div>


</div>

