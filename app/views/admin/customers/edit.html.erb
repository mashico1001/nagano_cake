<div class="container">
  <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
    <%= form_with model:@item, url: admin_customer_path(@customer), local:true do |f| %>

      <div class="row mb-3">
        会員ID
        <div class="form-group col-sm-7">
          <%= @customer.id %>
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :last_name, :first_name, "氏名", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
          <%= f.text_field :last_name, :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :last_name_kana, :first_name_kana, "フリガナ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
          <%= f.text_area :last_name_kana, :first_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label "郵便番号", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div> 
      <div class="row mb-3">
        <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
        <%= f.text_field :address, class: "form-control" %>円
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :telephone_number, "電話番号", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
        <%= f.text_field :telephone_number, class: "form-control" %>円
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
        <%= f.text_field :email, class: "form-control" %>円
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :is_active, "会員ステータス", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-7">
        <%= f.radio_button :is_active, :true, checked: true %>
        <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
      <div class="row mb-3">
        <div class="col-sm-7">
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
</div>