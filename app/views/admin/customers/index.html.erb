<div class="container">
<h3>会員一覧</h3>
  <div class="row">
    <div class="col-9 mx-auto">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
                <%= customer.id %>
            </td>
            <td>
                <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
                <% end %>
            </td>
            <td>
                <%= customer.email %>
            </td>
            <td>
                <% if customer.is_active == true %>
                <div class="font-weight-bold text-success">有効</div>
                <% else %>
                <div class="font-weight-bold text-black-50">退会</div>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
