<h1>顧客一覧</h1>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <p>
          <%= customer.id %>
        </p>
      </td>
      <td>
        <p>
          <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </p>
      </td>
      <td>
        <p>
          <%= customer.email %>
        </p>
      </td>
      <td>
        <p>
          <%= customer.is_active ? '退会' : '有効' %>
        </p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
