<div class="container">
  <div class="row">
    <div class="col-auto mr-auto">
      <h6 class="my-3">注文詳細履歴</h6>
      <table class="table table-borderless">
        <tr><th>購入者</th>
        <td>
          <%= link_to do %>
          <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
        </td></tr>
        <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th>配送先</th>
          <td>
            <%= @order.full_address %><br/>
            <%= @order.name %>
          </td></tr>
        <tr><th>支払方法</th><td><%= @order.payment_status_i18n %></td></tr>
        <tr><th>注文ステータス</th>
        <td>
          <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
            <%= f.select :order_status, Order.order_statuses_i18n.invert, {} %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
        </td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.purchase_price.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td><% subtotal = order_detail.purchase_price * order_detail.quantity %>
                <%= subtotal.to_s(:delimited) %>
            </td>
            <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), local: true do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert, {} %>
                <%= f.submit "更新", class: "btn btn-success" %>
                <% end %>    
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>